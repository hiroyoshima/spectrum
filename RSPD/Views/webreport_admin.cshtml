@using runnerDotNet;
@{
 XTempl Model = this.Model;
 if(ViewBag != null && ViewBag.xt != null)
 {
  Model = ViewBag.xt;
  if(Model != null)
  {
   Model.currentViewContext = ViewContext;
  }
 }
 string webRootPath = "";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">@(new HtmlString(MVCFunctions.GetBuferContentAndClearBufer()))
<html lang="en">
    <head>
        <title>Admin Area</title>
		<META http-equiv="X-UA-Compatible" content="IE=Edge" />
		<LINK type="text/css" href="styles/default.css" rel="stylesheet" />
		<LINK type="text/css" href="styles/@(Model.displayVar("wr_pagestylepath"))/style.css" rel="stylesheet" />
		<style>@MvcHtmlString.Create(@"
			.ui-tabs-panel, .ui-widget-content, .ui-corner-bottom {border:0px solid black}
			.ui-widget-content, .ui-corner-all {background:none; border 0px solid black; border-radius:0px;};")</style>
		@(Model.displayVar("h_includes"))
    </head>
    <BODY class="@(Model.displayVar("wr_pagestylepath")) yui-skin-sam">
        @(Model.displayVar("b_includes"))
	@{Html.RenderSharedView("header");}
    <div class="rnr-page">
		<div class="rnr-top">
			<DIV class="rnr-s-1 @(Model.displayVar("wr_pagestylepath"))">
				<div class="rnr-c rnr-cv">
					<div class="style2" align=center>
						Admin page: Table permissions
					</div>
					<div class="style1 rnr-b-wrapper">
						<DIV class="rnr-s-fields @(Model.displayVar("wr_pagestylepath"))">
							<div class="rnr-c rnr-cv">
								<div class="style1">
									<table class="fieldGrid">
										<tr>
											<td></td>
											<td colspan=2 id="my_tabs">
												<div id="radio_select_table" class="yui-navset yui-navset-top">
													<ul class="yui-nav">
														<li id=li_db class="selected"><A href="#tabs-0" id="radio_db">Database tables</a></li>
														<li id=li_project><A href="#tabs-0" id="radio_project">Project tables</a></li>
														<li id=li_custom><A href="#tabs-0" id="radio_custom">SQL queries</a></li>
													</ul>
												</div>
											</td>
											<td></td>
										</tr>
										<tr id="tabs-0">
											<td></td>
											<td>
												<b>@(Model.displayVar("group_header"))</b>
											</td>
											<td>
												<INPUT type=checkbox id="ch_all" />&nbsp;<b>Select/Unselect all</b>
											</td>
											<td></td>
										</tr>
										<tr>
											<td></td>
											<td style="vertical-align:top;">
												<div id="group_list" style="vertical-align:top;">
													@(Model.displayVar("group_list"))
												</div>
											</td>
											<td width="100%" style="vertical-align:top;">
												<div id="table_list" style="vertical-align:top;">
													@(Model.displayVar("table_list"))
												</div>
											</td>
											<td></td>
										</tr>
									</table>
								</div>
								<div id="btns" class="style2" align=center>
									<A id="saveexitbtn" name="saveexitbtn" class="rnr-button" href="#">Save</a>
									<A id="backbtn" name="backbtn" class="rnr-button" href="#">Back</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	@{Html.RenderSharedView("footer");}
	
	<iframe id="aframe" style="display:none;position:absolute;" scrolling="no" frameborder="0"></iframe>
	<div id="alert">
	</div>
		
    </body>
</html>