@using runnerDotNet;
@{
 XTempl Model = this.Model;
 if(ViewBag != null && ViewBag.xt != null)
 {
  Model = ViewBag.xt;
  if(Model != null)
  {
   Model.currentViewContext = ViewContext;
  }
 }
 string webRootPath = "";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">@(new HtmlString(MVCFunctions.GetBuferContentAndClearBufer()))
<html lang="en">
    <head>
        <title>Admin Area</title>
		<META http-equiv="X-UA-Compatible" content="IE=Edge" />
		<LINK type="text/css" href="styles/default.css" rel="stylesheet" />
		<LINK type="text/css" href="styles/@(Model.displayVar("wr_pagestylepath"))/style.css" rel="stylesheet" />
        @(Model.displayVar("h_includes"))
    </head>
    <BODY class="@(Model.displayVar("wr_pagestylepath"))">
        @(Model.displayVar("b_includes"))
	@{Html.RenderSharedView("header");}
    <div class="rnr-page">
		<div class="rnr-top">
			<DIV class="rnr-s-1 @(Model.displayVar("wr_pagestylepath"))">
				<div class="rnr-c rnr-cv">
					<div class="style2" align=center>
						Admin area: Custom SQL
					</div>
					<div class="style1 rnr-b-wrapper">
						<DIV class="rnr-s-fields @(Model.displayVar("wr_pagestylepath"))">
							<div class="rnr-c rnr-cv">
								<div class="style1">
									<table class="fieldGrid">		
										<tr>
											<td></td>
											<td align=center>
													@(Model.displayVar("sql_list"))
											</td>
											<td></td>
										</tr>     
										<tr>
											<td></td>
											<td align="center">
												<A id="addsql" name="addsql" class="rnr-button" href="#">New query</a>
												<A id="a_addsql" class="various fancybox.iframe" href="web_query?sql=add&check=yes&ie=UTF-8&iframe"></a>
												<A id="editsql" name="editsql" class="rnr-button" href="#">Edit</a>
												<A id="a_editsql" class="various fancybox.iframe" href="web_query?sql=edit&ie=UTF-8&iframe"></a>
												<A id="deletesql" name="deletesql" class="rnr-button" href="#">Delete</a>
												<A id="resultsql" name="resultsql" class="rnr-button" href="#">View results</a>
												<A id="a_resultsql" class="various fancybox.iframe" href="web_query?sql=result&ie=UTF-8&iframe"></a>
											</td>
											<td></td>
										</tr>
										<tr>
											<td></td>
											<td align=center>
													<textarea id="sql_content" style="background-color:white;width:500px;height:60px;text-align:left;font-weight:normal;font-size:10pt;padding:5px;" disabled></textarea>
											</td>
											<td></td>
										</tr>     
									</table>
								</div>
								<div id="btns" class="style2" align=center>
									<td id="btns" align="center">
										<A id="backbtn" name="backbtn" class="rnr-button" href="#">Back to menu</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	@{Html.RenderSharedView("footer");}
		<iframe id="aframe" style="display:none;position:absolute;" scrolling="no" frameborder="0"></iframe>
		<div id="alert">
		</div>
    </body>
</html>